---
interface Props {
	title: string;
	date: string;
	employer: string;
}

const { title, date, employer } = Astro.props;
---

<li class="mb-10 ml-4">
	<!-- this div is the little circle -->
	<div class="absolute w-3 h-3 bg-primary rounded-full mt-1.5 -left-1.5 border border-white"></div>

	<time class="mb-1 text-md font-semibold leading-none text-primary">{date}</time>
	<h3 class="text-2xl font-semibold text-gray-900 dark:text-white">{title}</h3>
	<h2 class="text-lg font-semibold text-base-content">{employer}</h2>

	<p class="text-base font-normal text-base-content">
		<slot />
	</p>
</li>
