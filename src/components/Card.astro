---
import { Image } from "astro:assets";

interface Props {
	title: string;
	content: string;
	to: string;
	image?: string;
}

const { title, content, to, image = "" } = Astro.props;
---

<div
	class="card w-full border-2 border-gray-200 border-opacity-70 bg-base-100 lg:card-side dark:border-neutral-700"
>
	{
		image && (
			<figure class="border-b-2 border-gray-200 border-opacity-70 dark:border-neutral-700 lg:border-b-0 lg:border-r-2">
				<Image src={image} alt="Test Image" height="256" width="256" />
			</figure>
		)
	}
	<div class="card-body">
		<h2 class="card-title">{title}</h2>
		<p>{content}</p>
		<div class="card-actions w-full">
			<a
				class="btn btn-primary no-animation w-full text-white active:bg-accent"
				href={to}>Read More</a
			>
		</div>
	</div>
</div>
