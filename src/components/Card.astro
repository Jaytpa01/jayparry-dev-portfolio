---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
	title: string;
	content?: string;
	to: string;
	image?: ImageMetadata;
}

const { title, content, to, image = "" } = Astro.props;
---

<div
	class="card w-full border-2 border-gray-200 border-opacity-70 bg-base-100 lg:card-side dark:border-neutral-700"
>
	{
		image && (
			<figure class="min-w-fit border-b-2 border-gray-200 border-opacity-70 dark:border-neutral-700 lg:border-b-0 lg:border-r-2">
				<Image
					src={image}
					alt="Test Image"
					height="256"
					width="256"
				/>
			</figure>
		)
	}
	<div class="card-body">
		<h2
			class="card-title text-2xl font-semibold"
			transition:name={title}
		>
			{title}
		</h2>
		<p class="font-medium">{content}</p>
		<div class="card-actions w-full">
			<a
				class="btn btn-primary btn-active no-animation w-full font-medium text-black hover:btn-accent hover:text-black"
				href={to}
				aria-label="Read More"
			>
				Read More
			</a>
		</div>
	</div>
</div>
