---
import NavContent from "./NavContent.astro";
---

<!-- Navbar -->
<div class="sticky lg:static top-0 bg-white navbar">
	<div class="navbar-start lg:hidden">
		<label for="my-drawer" class="btn btn-square btn-ghost">
			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				class="inline-block w-6 h-6 stroke-current"
			>
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
			</svg>
		</label>
	</div>
	<div class="navbar-center lg:flex-1">
		<a href="/" class="font-extrabold text-2xl text-slattery_orange-100">Jay Parry</a>
	</div>

	<div class="navbar-end"></div>

	<div class="flex-none hidden lg:block">
		<ul class="menu menu-horizontal text-lg">
			<!-- Navbar menu content here -->
			<NavContent />
		</ul>
	</div>
</div>
