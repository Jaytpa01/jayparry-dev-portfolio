---
import { Image } from "astro:assets";
import NavContent from "./NavContent.astro";
import ProfileImage from "../assets/images/profile.jpg";
import Socials from "./Socials.astro";
---

<div class="drawer-side z-50 lg:hidden">
	<label
		for="my-drawer"
		class="drawer-overlay"
	>
	</label>
	<aside
		class="flex min-h-full w-5/6 flex-col items-center space-y-2 bg-base-200 p-4"
	>
		<div class="avatar my-4">
			<div class="w-32 rounded-full">
				<a href="/">
					<Image
						src={ProfileImage}
						alt="Profile Image"
					/>
				</a>
			</div>
		</div>

		<ul class="menu w-full grow self-start text-xl">
			<!-- Sidebar content here -->
			<NavContent />
		</ul>

		<div class="flex space-x-3">
			<Socials size="32" />
		</div>
	</aside>
</div>
