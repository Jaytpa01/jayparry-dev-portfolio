---
import classNames from "classnames";
interface Props {
	type?: "tip" | "info" | "caution" | "danger";
	title?: string;
}

const { type = "info", title } = Astro.props as Props;

const icons: Record<
	NonNullable<Props["type"]>,
	{ viewBox: string; d: string; twClass: string }
> = {
	tip: {
		viewBox: "0 0 16 16",
		d: "M8 1.5c-2.363 0-4 1.69-4 3.75 0 .984.424 1.625.984 2.304l.214.253c.223.264.47.556.673.848.284.411.537.896.621 1.49a.75.75 0 0 1-1.484.211c-.04-.282-.163-.547-.37-.847a8.456 8.456 0 0 0-.542-.68c-.084-.1-.173-.205-.268-.32C3.201 7.75 2.5 6.766 2.5 5.25 2.5 2.31 4.863 0 8 0s5.5 2.31 5.5 5.25c0 1.516-.701 2.5-1.328 3.259-.095.115-.184.22-.268.319-.207.245-.383.453-.541.681-.208.3-.33.565-.37.847a.751.751 0 0 1-1.485-.212c.084-.593.337-1.078.621-1.489.203-.292.45-.584.673-.848.075-.088.147-.173.213-.253.561-.679.985-1.32.985-2.304 0-2.06-1.637-3.75-4-3.75ZM5.75 12h4.5a.75.75 0 0 1 0 1.5h-4.5a.75.75 0 0 1 0-1.5ZM6 15.25a.75.75 0 0 1 .75-.75h2.5a.75.75 0 0 1 0 1.5h-2.5a.75.75 0 0 1-.75-.75Z",
		twClass: "text-blue-950 prose-code:text-blue-950",
	},
	info: {
		viewBox: "0 0 16 16",
		d: "M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8Zm8-6.5a6.5 6.5 0 1 0 0 13 6.5 6.5 0 0 0 0-13ZM6.5 7.75A.75.75 0 0 1 7.25 7h1a.75.75 0 0 1 .75.75v2.75h.25a.75.75 0 0 1 0 1.5h-2a.75.75 0 0 1 0-1.5h.25v-2h-.25a.75.75 0 0 1-.75-.75ZM8 6a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z",
		twClass: "text-gray-950 prose-code:text-gray-950",
	},
	caution: {
		viewBox: "0 0 16 16",
		d: "M6.457 1.047c.659-1.234 2.427-1.234 3.086 0l6.082 11.378A1.75 1.75 0 0 1 14.082 15H1.918a1.75 1.75 0 0 1-1.543-2.575ZM8 5a.75.75 0 0 0-.75.75v2.5a.75.75 0 0 0 1.5 0v-2.5A.75.75 0 0 0 8 5Zm1 6a1 1 0 1 0-2 0 1 1 0 0 0 2 0Z",
		twClass: "text-yellow-950 prose-code:text-yellow-950",
	},
	danger: {
		viewBox: "",
		d: "",
		twClass: "",
	},
};

const { viewBox, d, twClass } = icons[type];
---

<aside class=`${type} rounded-lg border-l-8 px-3 py-3 lg:py-6`>
	<div class="flex items-center space-x-2">
		<svg
			xmlns="http://www.w3.org/2000/svg"
			{viewBox}
			height={24}
			class="icon"
		>
			<path {d}> </path>
		</svg>

		<div class="font-extrabold uppercase">
			{title || type}
		</div>
	</div>
	<section
		class={classNames(
			"prose prose-sm max-w-none font-semibold lg:prose-lg",
			twClass,
		)}
	>
		<slot />
	</section>
</aside>

<style>
	.caution {
		@apply border-yellow-500 bg-yellow-100 text-yellow-950;
	}
	.caution .icon {
		@apply fill-yellow-950;
	}

	.tip {
		@apply border-blue-500 bg-blue-100 text-blue-950;
	}
	.tip .icon {
		@apply fill-blue-950;
	}

	.info {
		@apply border-gray-600 bg-gray-50 text-gray-950;
	}
	.info .icon {
		@apply fill-gray-950;
	}
</style>
