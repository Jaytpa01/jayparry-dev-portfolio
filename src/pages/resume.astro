---
import TimelineContainer from "@components/Timeline/TimelineContainer.astro";
import TimelineElement from "@components/Timeline/TimelineElement.astro";
import BaseLayout from "@layouts/BaseLayout.astro";

interface Job {
	title: string;
	employer: string;
	date: string;
	description: string;
}

const jobs: Job[] = [
	{
		title: "Fullstack Developer",
		employer: "welcome. Digital Agency",
		date: "June 2023 - Present",
		description:
			"I primarily concentrated on development for a major online auction house client, collaborating directly with the client's Head of Technology to gather requirements, address issues, and introduce new features. I utilized Node.js and React to design and implement solutions and to successfully integrate with various third-party systems, such as Salesforce, Westpac PayWay, and DoxAI to enable and improve functionality.",
	},
	{
		title: "Systems Engineer",
		employer: "Automated Electrical Solutions",
		date: "March 2021 - May 2023",
		description:
			"As the sole developer, I managed various responsibilities within the software development lifecycle at Automated; including designing and maintaining RESTful APIs in Golang and Node.js, managing a TCP server for IoT device control, developing a user-friendly React application for sports lighting API interaction, and setting up a robust development environment in Google Kubernetes Engine for efficient project development.",
	},
];
---

<BaseLayout title="Resume | Jay Parry" description="My work experience.">
	<div class="mt-3">
		<TimelineContainer>
			{
				jobs.map((job) => {
					const { title, date, description, employer } = job;
					return (
						<TimelineElement title={title} date={date} employer={employer}>
							{description}
						</TimelineElement>
					);
				})
			}
		</TimelineContainer>
	</div>
</BaseLayout>
