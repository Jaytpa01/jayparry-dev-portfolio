---
import TimelineContainer from "@components/Timeline/TimelineContainer.astro";
import TimelineElement from "@components/Timeline/TimelineElement.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import { TAGS } from "../constants";
import Download from "@components/icons/Download.astro";

const { GO, NODE, REACT, GCP, KUBERNETES, SALESFORCE, HEROKU } = TAGS;

interface Job {
	title: string;
	employer: string;
	date: string;
	description: string;
	tags?: string[];
}

const jobs: Job[] = [
	{
		title: "Fullstack Developer",
		employer: "welcome. Digital Agency",
		date: "June 2023 - Present",
		description:
			"I primarily focused on development for a client running an online auction house, collaborating with their Head of Technology to gather requirements, address issues, and introduce new features. We used Node.js and React to build the application, and integrated with various third-party systems such as Salesforce, Westpac PayWay, and DoxAI.",
		tags: [NODE, REACT, SALESFORCE, HEROKU],
	},
	{
		title: "Systems Engineer",
		employer: "Automated Electrical Solutions",
		date: "March 2021 - May 2023",
		description:
			"As the sole developer, I managed various responsibilities within the software development lifecycle at Automated; including designing and maintaining RESTful APIs in Golang and Node.js, managing a TCP server for IoT device control, developing a user-friendly React application for sports lighting API interaction, and setting up a robust development environment in Google Kubernetes Engine for efficient project development.",
		tags: [GO, NODE, REACT, GCP, KUBERNETES],
	},
];
---

<BaseLayout
	title="Resume | Jay Parry"
	description="My work experience."
>
	<div class="mt-3">
		<TimelineContainer>
			{
				jobs.map((job) => {
					const { title, date, description, employer, tags } = job;
					return (
						<TimelineElement
							title={title}
							date={date}
							employer={employer}
							tags={tags}
						>
							{description}
						</TimelineElement>
					);
				})
			}
		</TimelineContainer>
	</div>

	<div class="flex justify-center py-4">
		<a
			href="/jay-parry-resume.pdf"
			download
			class="btn btn-accent text-white"
		>
			<Download size="24" />
			 Download Resume
		</a>
	</div>
</BaseLayout>
